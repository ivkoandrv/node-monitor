{
  "include": ["src/server/**/*.ts"],
  "exclude": ["src/**/__tests__/*", "node_modules"],
  "compilerOptions": {
    "target": "ESNext",
    "module": "commonjs",
    "lib": ["DOM", "ESNext"],
    "rootDir": "./src/server",
    "paths": {
      "@/*": ["./src/*"]
    },
    "allowJs": true,
    "outDir": "/dist/server",
    "esModuleInterop": true,
    "strict": true,
    "skipLibCheck": true
  }
}
